.alert
  position: relative;
  setFlex(row, right, baseline)
  border-radius: 0;
  border-width: 4px 0 0;
  border-style: solid;
  border-color: rgba(0,0,0,.12)!important;
  color: #fff;
  font-size: 18px;
  margin: 4px auto;
  padding: 16px;
  setTransition()

  & > i
    margin-left 10px


  &--success
    background-color: $green.darken-1
    color: $shades.white

    & > i
      color: $green.darken-4


  &--error
    background-color: $red.darken-1
    color: $shades.white

    & > i
      color: $red.darken-4

  &--warning
    background-color: $orange.darken-1
    color: $shades.white

    & > i
      color: $orange.darken-4


  &--info
    background-color: $blue.darken-1
    color: $shades.white

    & > i
      color: $blue.darken-4

